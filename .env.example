# Environment variables for Social Media Platform
# Copy this file to .env and fill in your actual values

# Database Configuration
POSTGRES_DB=social_media_auth
POSTGRES_USER=auth_user
POSTGRES_PASSWORD=your-postgres-password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Spring Cloud Configuration
CONFIG_SERVER_URL=http://config-server:8888
EUREKA_SERVER_URL=http://discovery-server:8761/eureka
CONFIG_SERVER_USERNAME=config-admin
CONFIG_SERVER_PASSWORD=your-config-server-password
EUREKA_ADMIN_PASSWORD=your-eureka-admin-password
CONFIG_ENCRYPT_KEY=your-encryption-key
CONFIG_GIT_URI=file:///config-repo

# JWT Configuration
JWT_ISSUER=auth-service
JWT_AUDIENCE=social-media-platform
JWT_ACCESS_TOKEN_EXPIRATION=900
JWT_REFRESH_TOKEN_EXPIRATION=604800

# OAuth2 Configuration (Google)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8081/oauth2/callback/google

# Application Ports
CONFIG_SERVER_PORT=8888
DISCOVERY_SERVER_PORT=8761
AUTH_SERVICE_PORT=8081
API_GATEWAY_PORT=8080

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password



# Logging Configuration
LOG_LEVEL=INFO
GATEWAY_LOG_LEVEL=INFO

# Environment Configuration
SPRING_PROFILES_ACTIVE=docker
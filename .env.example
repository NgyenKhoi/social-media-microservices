# Environment variables for Social Media Platform
# Copy this file to .env and fill in your actual values

# PostgreSQL Admin Configuration (Single PostgreSQL Server)
POSTGRES_ADMIN_USER=postgres
POSTGRES_ADMIN_PASSWORD=your-postgres-admin-password

# Database Users and Passwords (for logical databases)
AUTH_DB_USER=auth_user
AUTH_DB_PASSWORD=your-auth-db-password
KEYCLOAK_DB_USER=keycloak_user
KEYCLOAK_DB_PASSWORD=your-keycloak-db-password

# Database URLs
AUTH_DATABASE_URL=jdbc:postgresql://postgresql:5432/auth_db
KEYCLOAK_DATABASE_URL=jdbc:postgresql://postgresql:5432/keycloak_db

# Keycloak Configuration
KEYCLOAK_ADMIN_USER=admin
KEYCLOAK_ADMIN_PASSWORD=your-keycloak-admin-password
KEYCLOAK_PORT=8090:8080
KEYCLOAK_REALM=social-media-platform

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Spring Cloud Configuration
CONFIG_SERVER_USERNAME=config-admin
CONFIG_SERVER_PASSWORD=your-config-server-password
CONFIG_ENCRYPT_KEY=your-encryption-key

# OAuth2 Configuration (Google)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Application Ports
CONFIG_SERVER_PORT=8888:8888
DISCOVERY_SERVER_PORT=8761
AUTH_SERVICE_PORT=8081
API_GATEWAY_PORT=8080

# Monitoring Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your-grafana-password